@using FYP.SSCard.WEB.UI.Models.Documents
@model DocumentsModel


@using (Html.BeginForm("edit", "documents", FormMethod.Post, new { id = "EditDocuments", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", Model.Id)
    <div class="form-inline col-lg-12">
        @*<div class="form-group">
             <div class="input-group ">
                 <label>Qualification</label>
                  @Html.DropDownList("Qualification", (IEnumerable<SelectListItem>)ViewBag.QualificationCategory, "-Select Qualification -", new { @class = "form-control col-lg-5" })
             </div>
            </div>*@
        <div class="form-group">
            <div class="input-group  col-lg-12">
                <label>Result Card</label>
                <img src="@Url.Content(Model.Imageupload)" alt="Result Card" style="height:100px;width:200px;" class="img-responsive" />
                <input type="file" id="photo" name="photo" />
            </div>
        </div>
        <div class="form-group">
            <div class="input-group ">
                <div class="input-group has-feedback">
                    <label>Board/University</label>
                    @Html.TextBox("StudentRollNo", Model.StudentRollno, new { @class = "form-control col-lg-6", placeholder = "Enter Roll No", required = "required" })
                    <span class="form-control-feedback"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group ">
                <div class="input-group has-feedback">
                    <label>Board/University</label>
                    @Html.TextBox("Board", Model.Board, new { @class = "form-control col-lg-6", placeholder = "Enter Board/University", required = "required" })
                    <span class="form-control-feedback"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group has-feedback">
                    <label>Passing Year</label>
                    @Html.TextBox("Passing Year", Model.PassingYear, new { @class = "form-control col-lg-6", placeholder = "Enter Passing", required = "required" })
                    <span class="form-control-feedback"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group has-feedback">
                    <label>Subject</label>
                    @Html.TextBox("Subjects", Model.Subject, new { @class = "form-control col-lg-6", placeholder = "Subject", required = "required" })
                    <span class="form-control-feedback"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group has-feedback">
                    <label>Total Marks</label>
                    @Html.TextBox("Total Marks", Model.TotalMarks, new { @class = "form-control col-lg-4", placeholder = "Enter Total Marks", required = "required" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group has-feedback">
                    <label>Obtain Marks</label>
                    @Html.TextBox("Obtain Marks", Model.ObtainMarks, new { @class = "form-control col-lg-4", placeholder = "Enter Obtain Marks", required = "required" })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group" style="margin-top:15px;">
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-save"></span>&nbsp; Save</button>
        <button type="reset" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-refresh"></span>&nbsp; Cancel</button>
    </div>
}
