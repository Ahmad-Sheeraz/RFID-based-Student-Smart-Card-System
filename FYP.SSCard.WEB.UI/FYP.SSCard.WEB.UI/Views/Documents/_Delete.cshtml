@using FYP.SSCard.WEB.UI.Models.Documents
@model DocumentsModel


@using (Html.BeginForm("delete", "documents", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("Id", Model.Id)
    @Html.Hidden("Board", Model.Board)
    @Html.Hidden("StudentRollno", Model.StudentRollno)
    @Html.Hidden("PassingYear", Model.PassingYear)
    @Html.Hidden("Subject", Model.Subject)
    @Html.Hidden("Total Marks", Model.TotalMarks)
    @Html.Hidden("Obtain Marks", Model.ObtainMarks)
    //@Html.Hidden("QualyCategory", Model.QualificationCategories)
    <div class="form-group">
        <h4 style="margin:5px; padding:0px;">@Model.StudentRollno </h4>
        <h4 style="margin:5px; padding:0px;">@Model.Board </h4>
        <h4 style="margin:5px; padding:0px;">@Model.PassingYear </h4>
        <h4 style="margin:5px; padding:0px;">@Model.Subject </h4>
        <h4 style="margin:5px; padding:0px;">@Model.TotalMarks </h4>
        <h4 style="margin:5px; padding:0px;">@Model.ObtainMarks </h4>
        <img src="@Url.Content(Model.Imageupload)" alt="Result Card" style="height:200px;width:200px;" class="img-responsive" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span>&nbsp; Delete</button>
        <button type="reset" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>&nbsp; Cancel</button>
    </div>
}

